@model IEnumerable<ManagementCenter.Models.registration>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.registration_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.completion_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cancellation_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.registration_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.completion_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cancellation_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.password_hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course.course_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.registration_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.registration_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.registration_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
