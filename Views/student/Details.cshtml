@model ManagementCenter.Models.student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User Account Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email) 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.full_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.full_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.birthday)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        @* Hiển thị các khóa học đã đăng ký nếu muốn *@
        <dt class="col-sm-2">Registered Courses</dt> 
        <dd class="col-sm-10"> 
        <ul> 
        @foreach (var reg in Model.registrations) 
        { 
        <li>@reg.course.course_name (@reg.status)</li> 
        } 
        </ul> 
        </dd> 
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.student_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
