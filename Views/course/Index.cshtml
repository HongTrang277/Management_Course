@model IEnumerable<ManagementCenter.Models.course>
@using System.Globalization;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null) @* Thêm luôn cho lỗi nếu cần *@
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<p>
    <a asp-action="Create">Tạo khóa học mới</a>
</p>
<form asp-action="Index" method="get">
    @* Sử dụng GET để hiển thị từ khóa tìm kiếm trên URL *@
    <div class="form-actions no-color">
        <p>
            Tìm kiếm: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Index">Back to Full List</a> @* Link để xóa bộ lọc *@
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.course_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.max_capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.schedule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_name)
            </td>
            <td>
                @item.start_date?.ToString("dd/MM/yyyy")
            </td>
             <td>
                    @* Kiểm tra fee có giá trị không (vì là decimal?) *@
                    @(item.fee.HasValue ?
                        // Nếu có giá trị: Định dạng số theo chuẩn "N0" của vi-VN và thêm " VNĐ"
                        item.fee.Value.ToString("N0", CultureInfo.GetCultureInfo("vi-VN")) + " VNĐ"
                        :
                        // Nếu là null: Hiển thị chuỗi rỗng hoặc ký tự khác tùy bạn
                        ""
                        )
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.max_capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.schedule)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.course_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.course_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.course_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

